<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_15"
    >
    <TextView
        android:id="@+id/tvDialogRename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="@dimen/font_18"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Rename Document"/>
    <TextView
        android:id="@+id/tvIsiRename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDialogRename"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/font_14"
        android:gravity="center_horizontal"
        android:text="Enter a new name for document"
        />
    <EditText
        android:layout_below="@+id/tvIsiRename"
        android:id="@+id/etRenameDoc"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="5dp"

        android:ems="10"
        android:inputType="textPersonName"
        android:theme="@style/editTextLogin"
        android:hint="Input your documents name"
        android:paddingHorizontal="@dimen/margin_15"
        android:paddingVertical="5dp" />
    <LinearLayout

        android:layout_marginTop="@dimen/margin_10"
        android:layout_below="@+id/etRenameDoc"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonWhite"
            android:id="@+id/btnCancelRename"
            android:backgroundTint="@null"

            android:textAllCaps="false"
            android:text="Cancel"
            android:layout_gravity="center_vertical"


            android:layout_weight="0.42"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.16"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonRedSmall"
            android:id="@+id/btnContinueRename"
            android:backgroundTint="@null"
            android:text="Confirm"
            android:layout_gravity="center_vertical"

            android:layout_marginLeft="@dimen/margin_10"


            android:layout_weight="0.42"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>