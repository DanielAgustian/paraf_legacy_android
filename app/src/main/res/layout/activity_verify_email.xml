<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"

        tools:context=".view.MainActivity"
        android:orientation="vertical">



        <ImageView
            android:layout_marginTop="35dp"
            android:layout_gravity="center"

            android:layout_width="wrap_content"
            android:src="@drawable/ic_big_msg"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="32dp"
            android:text="Verify Your Email"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorGrayText"
            android:textSize="32sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvWelcome2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:text="Please check your email to take 4 digit \n
code for continue"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="#FF848484"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/etTokenEmail"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="7dp"
            android:ems="10"
            android:hint="@string/code_hint"
            android:inputType="textPersonName"
            android:theme="@style/editTextLogin" />

        <TextView
            android:clickable="true"
            android:layout_marginTop="15dp"
            android:id="@+id/tvResendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend Code"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/colorBlue"
            />

        <Button
            android:id="@+id/btnSendEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/buttonLogin"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:text="Send"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:theme="@style/buttonLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch1"></Button>





    </LinearLayout>

</ScrollView>
