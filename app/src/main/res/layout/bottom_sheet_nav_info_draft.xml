<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingTop="@dimen/margin_10"
android:paddingHorizontal="15sp"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:paddingBottom="@dimen/margin_15">
<!--    android:background="@drawable/rounded_bg"-->
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/margin_35"
        android:layout_height="3dp"
        android:src="@drawable/bottom_nav_icon"
        />
<LinearLayout
    android:layout_marginTop="@dimen/margin_15"
    android:paddingVertical="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivBotNavInfo"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/icon_40"
        android:layout_height="@dimen/icon_40"
        android:layout_marginRight="@dimen/margin_20"
        android:src="@color/colorPrimary"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/tvTitleInfo"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who needs to sign?"
            android:layout_marginBottom="@dimen/margin_10"
            android:textSize="@dimen/font_16" />
        <TextView

            android:id="@+id/tvDetailsInfo"
            android:textStyle="bold"
            android:textColor="@color/colorLightGrayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created, 12 June 2021 | 09.25"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

</LinearLayout>

<View
    android:layout_marginTop="@dimen/margin_10"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/colorPrimaryLight"/>
    <LinearLayout
        android:id="@+id/llDetailsDraft"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/button_flat_white"
        android:layout_marginTop="@dimen/margin_10"
        android:paddingVertical="8dp"
        android:layout_width="match_parent"
        android:weightSum="1.0"
        android:layout_height="wrap_content">

        <ImageView
            app:tint="@color/colorLightGrayText"
            android:src="@drawable/ic_info"

            android:layout_width="@dimen/ic_20"
            android:layout_height="@dimen/ic_20"
            />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="Details and Activities"
            android:textSize="@dimen/font_12"
            android:textColor="@color/colorLightGrayText"
            />
    </LinearLayout>
<LinearLayout
    android:id="@+id/llSaveDraft"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/button_flat_white"
    android:layout_marginTop="@dimen/margin_10"
    android:paddingVertical="8dp"
    android:layout_width="match_parent"
    android:weightSum="1.0"
    android:layout_height="wrap_content">

    <ImageView
        app:tint="@color/colorLightGrayText"
        android:src="@drawable/ic_save"
        android:layout_width="@dimen/ic_20"
        android:layout_height="@dimen/ic_20"
        />

    <TextView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:text="Save this sign"
        android:textSize="@dimen/font_12"
        android:textColor="@color/colorLightGrayText"
        />
</LinearLayout>
<LinearLayout
    android:id="@+id/llShareDraft"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/button_flat_white"
    android:layout_marginTop="@dimen/margin_10"
    android:paddingVertical="8dp"
    android:layout_width="match_parent"
    android:weightSum="1.0"
    android:layout_height="wrap_content">

    <ImageView
        app:tint="@color/colorLightGrayText"
        android:src="@drawable/ic_share"

        android:layout_width="@dimen/ic_20"
        android:layout_height="@dimen/ic_20"
        />

    <TextView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:text="Share this sign"
        android:textSize="@dimen/font_12"
        android:textColor="@color/colorLightGrayText"
        />
</LinearLayout>


<LinearLayout
    android:id="@+id/llRegenDraft"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/button_flat_white"
    android:layout_marginTop="@dimen/margin_10"
    android:paddingVertical="8dp"
    android:layout_width="match_parent"
    android:weightSum="1.0"
    android:layout_height="wrap_content">

    <ImageView
        app:tint="@color/colorLightGrayText"
        android:src="@drawable/ic_regen"

        android:layout_width="@dimen/ic_20"
        android:layout_height="@dimen/ic_20"
        />

    <TextView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:text="Re-create"
        android:textSize="@dimen/font_12"
        android:textColor="@color/colorLightGrayText"
        />
</LinearLayout>
<LinearLayout
    android:id="@+id/llRemindDraft"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/button_flat_white"
    android:layout_marginTop="@dimen/margin_10"
    android:paddingVertical="8dp"
    android:layout_width="match_parent"
    android:weightSum="1.0"
    android:layout_height="wrap_content">

    <ImageView

        android:src="@drawable/ic_bell"
        app:tint="@color/colorPrimary"
        android:layout_width="@dimen/ic_20"
        android:layout_height="@dimen/ic_20"
        />

    <TextView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:text="Remind Signers"
        android:textSize="@dimen/font_12"
        android:textColor="@color/colorLightGrayText"
        />
</LinearLayout>
<View
    android:layout_marginTop="@dimen/margin_10"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/colorPrimaryLight"/>
<LinearLayout
    android:id="@+id/llRenameDraft"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/button_flat_white"
    android:layout_marginTop="@dimen/margin_10"
    android:paddingVertical="8dp"
    android:layout_width="match_parent"
    android:weightSum="1.0"
    android:layout_height="wrap_content">

    <ImageView
        app:tint="@color/colorLightGrayText"
        android:src="@drawable/ic_rename"

        android:layout_width="@dimen/ic_20"
        android:layout_height="@dimen/ic_20"
        />

    <TextView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:text="Rename"
        android:textSize="@dimen/font_12"
        android:textColor="@color/colorLightGrayText"
        />
</LinearLayout>

<LinearLayout
    android:id="@+id/llDeleteDraft"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/button_flat_white"
    android:layout_marginTop="@dimen/margin_10"
    android:paddingVertical="8dp"
    android:layout_width="match_parent"
    android:weightSum="1.0"
    android:layout_height="wrap_content">

    <ImageView
        app:tint="@color/colorError"
        android:src="@drawable/ic_delete"

        android:layout_width="@dimen/ic_20"
        android:layout_height="@dimen/ic_20"
        />

    <TextView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:text="Delete"
        android:textSize="@dimen/font_12"
        android:textColor="@color/colorError"
        />
</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="@dimen/margin_20"/>
</LinearLayout>