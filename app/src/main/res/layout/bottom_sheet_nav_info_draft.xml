<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingTop="10dp"
android:paddingHorizontal="15sp"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:paddingBottom="15dp">
<!--    android:background="@drawable/rounded_bg"-->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="20dp"
        android:src="@color/colorPrimary"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView


            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who needs to sign?"
            android:layout_marginBottom="10dp"
            android:textSize="16sp" />
        <TextView


            android:textStyle="bold"
            android:textColor="@color/colorLightGrayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created, 12 June 2021 | 09.25"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>

<View
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/colorPrimaryLight"/>
    <LinearLayout
        android:id="@+id/llDetailsDraft"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/button_flat_white"
        android:layout_marginTop="10dp"
        android:paddingVertical="5dp"
        android:layout_width="match_parent"
        android:weightSum="1.0"
        android:layout_height="wrap_content">

        <ImageView
            app:tint="@color/colorLightGrayText"
            android:src="@drawable/ic_info"

            android:layout_width="24dp"
            android:layout_height="24dp"
            />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Details and Activities"
            android:textSize="14dp"
            android:textColor="@color/colorLightGrayText"
            />
    </LinearLayout>
<LinearLayout
    android:id="@+id/llSaveDraft"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/button_flat_white"
    android:layout_marginTop="10dp"
    android:paddingVertical="5dp"
    android:layout_width="match_parent"
    android:weightSum="1.0"
    android:layout_height="wrap_content">

    <ImageView
        app:tint="@color/colorLightGrayText"
        android:src="@drawable/ic_save"
        android:layout_width="24dp"
        android:layout_height="24dp"
        />

    <TextView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Save"
        android:textSize="14dp"
        android:textColor="@color/colorLightGrayText"
        />
</LinearLayout>
<LinearLayout
    android:id="@+id/llShareDraft"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/button_flat_white"
    android:layout_marginTop="10dp"
    android:paddingVertical="5dp"
    android:layout_width="match_parent"
    android:weightSum="1.0"
    android:layout_height="wrap_content">

    <ImageView
        app:tint="@color/colorLightGrayText"
        android:src="@drawable/ic_share"

        android:layout_width="24dp"
        android:layout_height="24dp"
        />

    <TextView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Share"
        android:textSize="14dp"
        android:textColor="@color/colorLightGrayText"
        />
</LinearLayout>


<LinearLayout
    android:id="@+id/llRegenDraft"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/button_flat_white"
    android:layout_marginTop="10dp"
    android:paddingVertical="5dp"
    android:layout_width="match_parent"
    android:weightSum="1.0"
    android:layout_height="wrap_content">

    <ImageView
        app:tint="@color/colorLightGrayText"
        android:src="@drawable/ic_regen"

        android:layout_width="24dp"
        android:layout_height="24dp"
        />

    <TextView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Regenerate"
        android:textSize="14dp"
        android:textColor="@color/colorLightGrayText"
        />
</LinearLayout>
<View
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/colorPrimaryLight"/>
<LinearLayout
    android:id="@+id/llRenameDraft"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/button_flat_white"
    android:layout_marginTop="10dp"
    android:paddingVertical="5dp"
    android:layout_width="match_parent"
    android:weightSum="1.0"
    android:layout_height="wrap_content">

    <ImageView
        app:tint="@color/colorLightGrayText"
        android:src="@drawable/ic_rename"

        android:layout_width="24dp"
        android:layout_height="24dp"
        />

    <TextView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Rename"
        android:textSize="14dp"
        android:textColor="@color/colorLightGrayText"
        />
</LinearLayout>

<LinearLayout
    android:id="@+id/llDeleteDraft"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/button_flat_white"
    android:layout_marginTop="10dp"
    android:paddingVertical="5dp"
    android:layout_width="match_parent"
    android:weightSum="1.0"
    android:layout_height="wrap_content">

    <ImageView
        app:tint="@color/colorLightGrayText"
        android:src="@drawable/ic_delete"

        android:layout_width="24dp"
        android:layout_height="24dp"
        />

    <TextView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Delete"
        android:textSize="14dp"
        android:textColor="@color/colorLightGrayText"
        />
</LinearLayout>

</LinearLayout>