<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:overScrollMode="never"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"

        tools:context=".view.MainActivity"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarRespond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/colorBackground"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ToolBarAddSign"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details and Activity"
                android:textStyle="bold"
                android:textColor="@color/colorGrayText"
                android:textSize="@dimen/font_20"
                android:layout_gravity="center"
                android:id="@+id/toolbar_titleResSign" />
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/rounded_bg"
            android:orientation="vertical"

            android:paddingVertical="@dimen/margin_15"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_10"
                >

                <LinearLayout

                    android:layout_marginVertical="@dimen/margin_15"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout

                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/font_12"
                            android:textColor="@color/colorLightGrayText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Requested By:"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvReqBYRespond"
                            android:textSize="@dimen/font_12"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:layout_marginBottom="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nanas Kuning (You)"/>
                        <TextView
                            android:id="@+id/tvEmailRespond"
                            android:textColor="@color/colorLightGrayText"
                            android:layout_marginTop="5dp"
                            android:textSize="@dimen/font_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="nanas.kuning@gmail.com"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout

                    android:layout_marginBottom="@dimen/margin_15"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout

                        android:layout_weight="0.4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/font_12"
                            android:textColor="@color/colorLightGrayText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Initiated on:"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:id="@+id/tvInitiatedRespond"
                            android:textSize="@dimen/font_12"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18 June, 2021 | 08.57"/>

                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/colorBackgroundBlue"/>

                <LinearLayout
                    android:layout_marginVertical="@dimen/margin_10"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginBottom="7dp"
                        android:textSize="@dimen/font_12"
                        android:textColor="@color/colorLightGrayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Document Name"/>
                    <TextView
                        android:id="@+id/tvDocNameRespond"
                        android:textSize="@dimen/font_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengajuan HKI 3 in 1 Ekspresiku Boardgame"
                        />
                    <TextView
                        android:layout_marginTop="@dimen/margin_20"

                        android:layout_marginBottom="7dp"
                        android:textSize="@dimen/font_12"
                        android:textColor="@color/colorLightGrayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"/>
                    <TextView
                        android:id="@+id/tvDescRespond"
                        android:textSize="@dimen/font_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengalihan Hak Cipta-HKI/ Nanas Kuning-UMN No. Surat : 00000033104/UMN/HKI"
                        />
                    <LinearLayout
                        android:layout_marginTop="@dimen/margin_20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="0.45"
                            android:layout_height="wrap_content">

                            <TextView


                                android:layout_marginBottom="7dp"
                                android:textSize="@dimen/font_12"
                                android:textColor="@color/colorLightGrayText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Category"/>
                            <TextView
                                android:id="@+id/tvCategoryRespond"
                                android:textSize="@dimen/font_13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Surat Pribadi"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="0.45"
                            android:layout_height="wrap_content">

                            <TextView


                                android:layout_marginBottom="7dp"
                                android:textSize="@dimen/font_12"
                                android:textColor="@color/colorLightGrayText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Type"/>
                            <TextView
                                android:id="@+id/tvTypeRespond"
                                android:textSize="@dimen/font_13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dokumen Resmi"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="@dimen/margin_20"

                        android:layout_marginBottom="7dp"
                        android:textSize="@dimen/font_12"
                        android:textColor="@color/colorLightGrayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Document Link"/>
                    <TextView
                        android:id="@+id/tvLinkRespond"
                        android:textSize="@dimen/font_13"
                        android:textColor="@color/colorBlue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Google.com/plceholderLink"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="0.45"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginTop="@dimen/margin_20"

                                android:layout_marginBottom="7dp"
                                android:textSize="@dimen/font_12"
                                android:textColor="@color/colorLightGrayText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status"/>
                            <TextView
                                android:id="@+id/tvStatusRespond"
                                android:textSize="@dimen/font_13"
                                android:textColor="@color/colorSuccess"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Signed"
                                android:layout_marginBottom="@dimen/margin_10"

                                />
                        </LinearLayout>
                        <View
                            android:layout_width="0dp"
                            android:layout_weight="0.1"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="0.45"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginTop="@dimen/margin_20"

                                android:layout_marginBottom="7dp"
                                android:textSize="@dimen/font_12"
                                android:textColor="@color/colorLightGrayText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Size"/>
                            <TextView
                                android:id="@+id/tvSizeRespond"
                                android:textSize="@dimen/font_13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="156 KB"
                                android:layout_marginBottom="@dimen/margin_10"
                                />


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:background="@color/colorBackgroundBlue"
                android:gravity="center_horizontal"
                android:paddingVertical="5dp">

                <TextView
                    android:id="@+id/tvPersonRespond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Person is left to sign"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_13"
                    android:textStyle="bold" />
            </LinearLayout>




            </LinearLayout>


            <LinearLayout
                android:background="@color/white"
                android:layout_marginHorizontal="@dimen/margin_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRespondDraft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginHorizontal="@dimen/margin_15"
                >
                <androidx.appcompat.widget.AppCompatButton
                    style="@style/buttonRed"
                    android:id="@+id/btnSignNow"
                    android:backgroundTint="@null"
                    android:text="Sign Now"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="@dimen/margin_25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_20"/>

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/buttonWhiteBigger"
                    android:id="@+id/btnDecline"
                    android:backgroundTint="@null"

                    android:textAllCaps="false"
                    android:text="Decline"
                    android:layout_gravity="center_vertical"

                    android:paddingHorizontal="@dimen/margin_25"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_30"/>
            </LinearLayout>


        </LinearLayout>

</androidx.core.widget.NestedScrollView>