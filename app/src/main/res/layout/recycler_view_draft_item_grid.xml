<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_15"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="@dimen/margin_20"
    android:layout_marginBottom="@dimen/margin_25"
    android:background="@drawable/rounded_bg_grid_view"
    android:gravity="center_horizontal">
    <ImageView
        android:id="@+id/ivSignList"
        android:background="@color/colorPrimaryLight"
        android:layout_width="@dimen/ic_80"
        android:gravity="center_vertical"
        android:layout_height="@dimen/ic_80"/>
    <TextView
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invoice Juni"
        android:id="@+id/tvTitleSignList"
        android:textColor="@color/colorGrayText"
        android:textSize="@dimen/font_14"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created, 12/07/2021 | 09.25"
        android:textColor="@color/colorLightGrayText"
        android:textSize="11sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/tvTimeSignList"
        />
    <TextView
        android:textSize="11sp"
        android:id="@+id/tvStatusListDraft"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPending"
        android:text="Waiting 1 person left to sign"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"/>
</LinearLayout>