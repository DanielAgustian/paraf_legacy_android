<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingHorizontal="5dp"
    android:layout_marginBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:background="@drawable/button_light_blue_bg"
        android:gravity="center"
        android:layout_width="40dp"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/ivNotifItem"
            android:src="@drawable/ic_notif_item"
            app:tint="@color/colorPrimary"
            android:layout_width="18dp"
            android:layout_height="18dp"/>
    </LinearLayout>
    <View
        android:layout_width="15dp"
        android:layout_height="0dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvNameNotif"
            android:text="LOrem Ipsum Dolor Amet"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="5dp"/>
        <TextView
            android:id="@+id/tvDetails"
            android:textColor="@color/colorGrayText"
            android:layout_width="match_parent"
            android:textSize="11sp"
            android:text="Eleanor Pena Request you a signature"
            android:layout_height="wrap_content"
            />
        <View
            android:layout_marginTop="10dp"
            android:background="@color/colorLightGrayText"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>
</LinearLayout>