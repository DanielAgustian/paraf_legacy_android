<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    >
    <androidx.appcompat.widget.Toolbar
        android:layout_alignParentTop="true"
        android:id="@+id/toolbarCreatePasscode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/colorBackground"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolBarAddSign"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        >

        <TextView
            android:id="@+id/toolbar_title_create_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Create Password"
            android:textColor="@color/colorGrayText"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_below="@id/toolbarCreatePasscode"
        android:background="@drawable/rounded_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="15dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ScrollView>

        <ImageView
            android:layout_marginTop="@dimen/margin_15"
            android:layout_gravity="center"

            android:layout_width="wrap_content"
            android:src="@drawable/ic_passcode_lock"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvCreatePasscode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_15"
            android:text="Create a passcode"
            android:textColor="@color/colorGrayText"
            android:textSize="@dimen/font_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvWelcome2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/margin_15"
            android:text="A passcode can protects your data
\nCreate 6 digit of your Passcode"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="#FF848484"
            android:textSize="@dimen/font_12"
            android:textStyle="bold"
            />

        <EditText
            android:visibility="gone"
            android:id="@+id/etMakePasscode"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="42dp"
            android:hint="Input Your passcode (Max. 6 char)"
            android:ems="10"
            android:inputType="numberPassword"
            android:theme="@style/editTextLogin"/>


        <Button
            android:visibility="gone"
            android:id="@+id/buttonPickPasscode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Save Passcode"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:theme="@style/buttonLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch1"></Button>


            <LinearLayout
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/text_passcode_bg"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.16"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="65dp">
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/dot1"
                        android:src="@drawable/passcode_dot_bg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/text_passcode_bg"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.16"
                    android:layout_width="0dp"
                    android:layout_height="65dp">
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/dot2"
                        android:src="@drawable/passcode_dot_bg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/text_passcode_bg"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.16"
                    android:layout_width="0dp"
                    android:layout_height="65dp">
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/dot3"
                        android:src="@drawable/passcode_dot_bg"
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/text_passcode_bg"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.16"
                    android:layout_width="0dp"
                    android:layout_height="65dp">
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/dot4"
                        android:src="@drawable/passcode_dot_bg"
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/text_passcode_bg"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.16"
                    android:layout_width="0dp"
                    android:layout_height="65dp">
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/dot5"
                        android:src="@drawable/passcode_dot_bg"
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/text_passcode_bg"
                    android:layout_weight="0.16"
                    android:layout_width="0dp"
                    android:layout_height="65dp">
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/dot6"
                        android:src="@drawable/passcode_dot_bg"
                        android:layout_width="@dimen/margin_20"
                        android:layout_height="@dimen/margin_20"/>
                </LinearLayout>
            </LinearLayout>


    </LinearLayout>
    <include layout="@layout/keyboard_layout"
    android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</RelativeLayout>
