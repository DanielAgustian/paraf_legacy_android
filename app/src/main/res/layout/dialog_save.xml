<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_15"
    >
    <TextView
        android:id="@+id/tvTitleDialogSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/margin_15"
        android:textSize="@dimen/font_18"
        android:text="Save Document"/>
    <TextView
        android:id="@+id/tvTitleDataSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/font_14"
        android:gravity="center_horizontal"
        android:text="'Pengajuan HKI 3 in 1 Ekspresiku Boardgame -
Paraf-nanas.jpeg' will be saved to Download"
        />
    <LinearLayout

        android:layout_marginVertical="10dp"

        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonWhite"
            android:id="@+id/btnCancelSave"
            android:backgroundTint="@null"
            android:textAllCaps="false"
            android:text="Cancel"
            android:layout_gravity="center_vertical"


            android:layout_weight="0.42"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.16"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonRedSmall"
            android:id="@+id/btnContinueSave"
            android:backgroundTint="@null"
            android:text="Save"
            android:layout_gravity="center_vertical"

            android:layout_weight="0.42"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>