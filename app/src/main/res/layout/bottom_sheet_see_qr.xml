<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/margin_10"

    android:paddingHorizontal="@dimen/margin_15"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/margin_15">
    <!--    -->
        <ImageView
            android:id="@+id/ivQRScanBotNav"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/qr_width"
            android:layout_height="@dimen/qr_height"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_20"
            android:src="@color/colorPrimary"/>

    <View
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FAFAFC"/>

    <LinearLayout

        android:layout_marginVertical="@dimen/margin_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/font_12"
                android:textColor="@color/colorLightGrayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created By:"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvCreatedBy"
                android:textSize="@dimen/font_12"
                android:layout_gravity="right"
                android:gravity="right"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nasi Uduk Afrika"/>
            <TextView
                android:id="@+id/tvEmailRS"
                android:textColor="@color/colorLightGrayText"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/font_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nasi.uduk.afrika@gmail.com"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout

        android:layout_marginVertical="@dimen/margin_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_weight="0.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/font_12"
                android:textColor="@color/colorLightGrayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Initiated on:"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:gravity="right"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:id="@+id/tvInitiated"
                android:textSize="@dimen/font_12"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 June, 2021 | 08.57"/>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FAFAFC"/>
    <LinearLayout
        android:id="@+id/llSaveCollabDialog"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/margin_10"
        android:paddingVertical="5dp"
        android:layout_width="match_parent"
        android:weightSum="1.0"
        android:layout_height="wrap_content">

        <ImageView
            app:tint="@color/colorLightGrayText"
            android:src="@drawable/ic_save"
            android:layout_width="@dimen/ic_20"
            android:layout_height="@dimen/ic_20"
            />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="Save this sign"
            android:textSize="@dimen/font_12"
            android:textColor="@color/colorLightGrayText"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llShareCollabDialog"
        android:clickable="true"
        android:layout_marginTop="@dimen/margin_10"
        android:paddingVertical="5dp"
        android:layout_width="match_parent"
        android:weightSum="1.0"
        android:layout_height="wrap_content">

        <ImageView
            app:tint="@color/colorLightGrayText"
            android:src="@drawable/ic_share"

            android:layout_width="@dimen/ic_20"
            android:layout_height="@dimen/ic_20"
            />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="Share this sign"
            android:textSize="@dimen/font_12"
            android:textColor="@color/colorLightGrayText"
            />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llRequestFileDialog"
        android:clickable="true"
        android:layout_marginTop="@dimen/margin_10"
        android:paddingVertical="5dp"
        android:layout_width="match_parent"
        android:weightSum="1.0"
        android:layout_height="wrap_content">

        <ImageView
            app:tint="@color/colorLightGrayText"
            android:src="@drawable/ic_share"

            android:layout_width="@dimen/ic_20"
            android:layout_height="@dimen/ic_20"
            />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="Send Final Document"
            android:textSize="@dimen/font_12"
            android:textColor="@color/colorLightGrayText"
            />
    </LinearLayout>
</LinearLayout>