<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView

        android:id="@+id/tvDialogItemInvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorLightGrayText"
        android:textSize="12sp"
        android:gravity="center_horizontal"
        android:text="Signers Name"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="5dp"
        android:id="@+id/etDialogItemInvName"
        android:ems="10"
        android:inputType="textPersonName"
        android:theme="@style/editTextLogin"
        android:hint="Name1"
        android:layout_marginBottom="15dp"
        android:textColorHint="@color/colorPlaceholder"

        android:paddingVertical="5dp" />
    <TextView
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDialogItemInvEmail"
        android:textColor="@color/colorLightGrayText"
        android:textSize="12sp"
        android:gravity="center_horizontal"
        android:text="Signers Email"
        />

    <EditText
        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="5dp"
        android:id="@+id/etDialogItemInvEmail"
        android:ems="10"
        android:inputType="textPersonName"
        android:theme="@style/editTextLogin"
        android:hint="email!@example.com"
        android:textColorHint="@color/colorPlaceholder"
        android:paddingVertical="5dp" />
</LinearLayout>