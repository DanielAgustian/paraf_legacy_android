<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:overScrollMode="never"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"

        tools:context=".view.MainActivity"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarCollabResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/colorBackground"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ToolBarAddSign"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details and Activity"
                android:textStyle="bold"
                android:textColor="@color/colorGrayText"
                android:textSize="20sp"
                android:layout_gravity="center"
                />

        </androidx.appcompat.widget.Toolbar>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_bg"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            >

            <ImageView
                android:id="@+id/ivQRScan"
                android:layout_marginVertical="15dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/colorPrimary"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tvStatusSign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:text="Your signature was created successfully"
                android:textColor="@color/colorSuccess"
                android:textSize="14sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/colorBackgroundBlue"/>
            <LinearLayout

                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/colorLightGrayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Created By:"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvCreatedBy"
                        android:textSize="12sp"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nanas Kuning (You)"/>
                    <TextView
                        android:id="@+id/tvEmailRS"
                        android:textColor="@color/colorLightGrayText"
                        android:layout_marginTop="5dp"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="nanas.kuning@gmail.com"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout

                android:layout_marginVertical="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/colorLightGrayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Initiated on:"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:id="@+id/tvInitiated"
                        android:textSize="12sp"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18 June, 2021 | 08.57"/>

                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/colorBackgroundBlue"/>

            <LinearLayout
                android:layout_marginVertical="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorLightGrayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document Name"/>
                <TextView
                    android:id="@+id/tvDocName"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengajuan HKI 3 in 1 Ekspresiku Boardgame"
                    />
                <TextView
                    android:layout_marginTop="15dp"

                    android:layout_marginBottom="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorLightGrayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"/>
                <TextView
                    android:id="@+id/tvDescRes"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengalihan Hak Cipta-HKI/ Nanas Kuning-UMN No. Surat : 00000033104/UMN/HKI"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="0.45"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="15dp"

                            android:layout_marginBottom="5dp"
                            android:textSize="12sp"
                            android:textColor="@color/colorLightGrayText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category"/>
                        <TextView
                            android:id="@+id/tvCategoryRes"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Surat Pribadi"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="0.45"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="15dp"

                            android:layout_marginBottom="5dp"
                            android:textSize="12sp"
                            android:textColor="@color/colorLightGrayText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type"/>
                        <TextView
                            android:id="@+id/tvTypeRes"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dokumen Resmi"
                            />
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:layout_marginTop="15dp"

                    android:layout_marginBottom="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorLightGrayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document Link"/>
                <TextView
                    android:id="@+id/tvLinkRes"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google.com/plceholderLink"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="0.45"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="15dp"

                            android:layout_marginBottom="5dp"
                            android:textSize="12sp"
                            android:textColor="@color/colorLightGrayText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"/>
                        <TextView
                            android:id="@+id/tvStatusRes"
                            android:textSize="13sp"
                            android:textColor="@color/colorSuccess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Signed"
                            android:layout_marginBottom="10dp"

                            />
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="0.1"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="0.45"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="15dp"

                            android:layout_marginBottom="5dp"
                            android:textSize="12sp"
                            android:textColor="@color/colorLightGrayText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Size"/>
                        <TextView
                            android:id="@+id/tvSizeRes"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="156 KB"
                            android:layout_marginBottom="10dp"
                            />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:paddingVertical="5dp"
            android:background="@color/colorBackgroundBlue"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPersonRespond"
                android:textSize="13sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="2 Person is left to sign"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCollabResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/colorBackgroundBlue"/>

            <LinearLayout
                android:id="@+id/llRemindCollab"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_flat_background"
                android:layout_marginTop="10dp"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:weightSum="1.0"
                android:layout_height="wrap_content">

                <ImageView
                    app:tint="@color/colorLightGrayText"
                    android:src="@drawable/ic_bell"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Remind"
                    android:textSize="14dp"
                    android:textColor="@color/colorLightGrayText"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llSaveCollabRes"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_flat_background"
                android:layout_marginTop="10dp"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:weightSum="1.0"
                android:layout_height="wrap_content">

                <ImageView
                    app:tint="@color/colorLightGrayText"
                    android:src="@drawable/ic_save"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Save this sign"
                    android:textSize="14dp"
                    android:textColor="@color/colorLightGrayText"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llShare"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_flat_background"
                android:layout_marginTop="10dp"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:weightSum="1.0"
                android:layout_height="wrap_content">

                <ImageView
                    app:tint="@color/colorLightGrayText"
                    android:src="@drawable/ic_share"

                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Share"
                    android:textSize="14dp"
                    android:textColor="@color/colorLightGrayText"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llDuplicate"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_flat_background"
                android:layout_marginTop="10dp"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:weightSum="1.0"
                android:layout_height="wrap_content">

                <ImageView
                    app:tint="@color/colorLightGrayText"
                    android:src="@drawable/ic_duplicate"

                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Duplicate"
                    android:textSize="14dp"
                    android:textColor="@color/colorLightGrayText"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llInvite"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_flat_background"
                android:layout_marginTop="10dp"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:weightSum="1.0"
                android:layout_height="wrap_content">

                <ImageView
                    app:tint="@color/colorLightGrayText"
                    android:src="@drawable/ic_invite"

                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Invite Signers"
                    android:textSize="14dp"
                    android:textColor="@color/colorLightGrayText"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRegen"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_flat_background"
                android:layout_marginTop="10dp"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:weightSum="1.0"
                android:layout_height="wrap_content">

                <ImageView
                    app:tint="@color/colorLightGrayText"
                    android:src="@drawable/ic_regen"

                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Regenerate"
                    android:textSize="14dp"
                    android:textColor="@color/colorLightGrayText"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llRename"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_flat_background"
                android:layout_marginTop="10dp"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:weightSum="1.0"
                android:layout_height="wrap_content">

                <ImageView
                    app:tint="@color/colorLightGrayText"
                    android:src="@drawable/ic_rename"

                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Rename"
                    android:textSize="14dp"
                    android:textColor="@color/colorLightGrayText"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llDelete"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/button_flat_background"
                android:layout_marginTop="10dp"
                android:paddingVertical="5dp"
                android:layout_width="match_parent"
                android:weightSum="1.0"
                android:layout_height="wrap_content">

                <ImageView
                    app:tint="@color/colorError"
                    android:src="@drawable/ic_delete"

                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Delete"
                    android:textSize="14dp"
                    android:textColor="@color/colorError"
                    />
            </LinearLayout>


        </LinearLayout>


