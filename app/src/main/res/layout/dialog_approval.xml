<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvTitleDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Your Request has been Send"/>

    <TextView
        android:id="@+id/tvTitleData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitleDialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"

        android:gravity="center_horizontal"
        android:text="If the owner has given a response, there will be an incoming notification"
        android:textSize="14sp" />
    <Button
        android:id="@+id/btnCloseDialog"
        android:layout_marginTop="15dp"
        android:layout_below="@id/tvTitleData"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Okay"
        style="@style/buttonRedSmall"
        android:textStyle="bold"
        />
</RelativeLayout>