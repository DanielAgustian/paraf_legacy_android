<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/margin_15"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ImageView
        android:layout_marginBottom="@dimen/margin_10"
        android:id="@+id/ivClose"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        app:tint="@color/colorGrayText"
        android:src="@drawable/ic_cross_icon"
        android:layout_width="@dimen/ic_25"
        android:layout_height="@dimen/ic_25"/>
    <ImageView
        android:id="@+id/ivVerification"
        android:layout_below="@+id/ivClose"
        android:src="@drawable/ic_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/margin_10"
        android:layout_below="@id/ivVerification"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvTitleDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/margin_15"
        android:textSize="@dimen/font_18"
        android:text="Email Terverifikasi"/>
    <TextView
        android:layout_below="@id/tvTitleDialog"
        android:id="@+id/tvTitleDataSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/font_14"
        android:gravity="center_horizontal"
        android:text="Selamat, e-mailmu telah berhasil terverifikasi"
        />
</RelativeLayout>